@model ProductViewModel

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Products</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/products/create">Add Product</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 60px;">Image</td>
                    <td>Name</td>
                    <td style="width: 20px;">Price</td>
                    <td style="width: 20px;">HomePage</td>
                    <td style="width: 20px;">Approved</td>
                    <td style="width: 140px;"></td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Products.Count>0){
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td style="vertical-align: middle;">@item.ProductId</td>
                        <td><img src="~/img/@item.ImageUrl" style="height: 60px; width: 40px; object-fit: contain;"></td>
                        <td style="font-size: large; text-align: center; vertical-align:middle">@item.Name</td>
                        <td style="font-weight: 500; vertical-align: middle;">@item.Price</td>
                        <td style="text-align:center; vertical-align: middle;">
                            @if (item.IsHome)
                            {
                                <i style="color: green;" class="fas fa-check-circle"></i>
                            }else{
                                <i style="color: red;" class="fas fa-times-circle"></i>
                            }
                        </td >
                        <td style="text-align: center; vertical-align: middle;">
                            @if (item.IsApproved)
                            {
                                <i style="color: green;" class="fas fa-check-circle"></i>
                            }else{
                                <i style="color: red;" class="fas fa-times-circle"></i>
                            }
                        </td>
                        <td style="vertical-align: middle;">
                            <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Edit</a>
                            
                            <form action="/admin/deleteproduct" method="POST" style="display: inline;">
                                <input type="hidden" name="productId" value="@item.ProductId">
                                <button type="submit"  class="btn btn-danger btn-sm ">Delete</button>
                            </form>

                        </td>
                    </tr>
                }
                }else{
                    <div class="alert alert-warning">
                        <h3>No Products</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>